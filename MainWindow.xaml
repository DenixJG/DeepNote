<Window x:Class="DeepNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeepNote"
        mc:Ignorable="d"
        Title="DeepNote" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen">
    <Border Background="#2F3E46">
        <Grid>
            <Button Content="Registrarse" 
                Margin="334,305,333,0" 
                VerticalAlignment="Top" 
                Height="25"
                Click="OpenRegisterView"/>
            <Button Content="Iniciar Sesión" 
                Margin="334,275,333,0" 
                VerticalAlignment="Top" 
                Height="25"
                Click="OpenLoginView" />
        </Grid>
    </Border>
</Window>
