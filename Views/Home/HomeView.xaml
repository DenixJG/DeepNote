<Window x:Class="DeepNote.Views.Home.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeepNote.Views.Home"
        mc:Ignorable="d"
        Title="HomeView" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen">
    <Border Background="#2F3E46">
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">

                </StackPanel>

                <StackPanel Grid.Row="1" HorizontalAlignment="Left" Width="520">
                    <TextBox x:Name="NoteTitle" Height="25" 
                             Text="Title" 
                             Foreground="Orange"
                             Width="500"
                             Opacity="0.5"
                             Margin="15,0,0,0"
                             HorizontalAlignment="Left" 
                             GotFocus="TitleGotFocus"
                             LostFocus="TitleLostFocus"/>

                    <Border Width="500" Height="2" 
                            Background="White" 
                            Opacity="0.5"
                            Margin="15,0,0,0"
                            HorizontalAlignment="Left"/>

                    <TextBox x:Name="NoteBody" Height="70" 
                             Text="Descripción"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"                            
                             AcceptsTab="True"
                             SpellCheck.IsEnabled="True"
                             FontSize="14" 
                             Opacity="0.5"
                             Width="500"
                             Margin="15,10,0,0"
                             HorizontalAlignment="Left"
                             GotFocus="BodyGotFocus"
                             LostFocus="BodyLostFocus"/>

                    <Border Width="500" Height="2" 
                            Background="White" 
                            Opacity="0.5"
                            Margin="15,0,0,0"
                            HorizontalAlignment="Left"/>

                </StackPanel>

                <StackPanel Grid.Row="1" HorizontalAlignment="Right"
                            Width="267" VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Label Content="User: " FontFamily="Helvetica" 
                               FontSize="15" 
                               Foreground="White" 
                               Opacity="0.7"
                               Margin="30,0,0,0"/>
                        <Label x:Name="lblUsernameInfo" Content="--" 
                               Foreground="Orange" 
                               FontFamily="Helvetica" 
                               FontSize="15" 
                               FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Label Content="Date: " FontFamily="Helvetica" 
                               FontSize="15" 
                               Foreground="White" 
                               Opacity="0.7"
                               Margin="30,0,0,0"/>
                        <Label x:Name="lblDateInfo" Content="--" 
                               Foreground="Orange" 
                               FontFamily="Helvetica" 
                               FontSize="15" 
                               FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="267">
                        <Label Content="Prioridad: " FontFamily="Helvetica" 
                               FontSize="15" 
                               Foreground="White" 
                               Opacity="0.7"
                               Margin="30,0,0,0"/>
                        <ComboBox HorizontalAlignment="Center" Width="130" 
                                  FontFamily="Helvetica"
                                  FontSize="15"
                                  FontWeight="Bold"
                                  BorderThickness="0"
                                  Foreground="#2F3E46"                                  
                                  ItemsSource="{Binding Path=Prioridades}"
                                  SelectedIndex="0" Style="{DynamicResource RoundComboBox}"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Agregar" HorizontalAlignment="Left" 
                            Margin="285,0,0,0"
                            FontSize="14"
                            VerticalAlignment="Center" 
                            Width="100"
                            Height="30"/>
                    <Button Content="Borrar" HorizontalAlignment="Right" 
                            Margin="20,0,0,0"
                            FontSize="14"
                            VerticalAlignment="Center" 
                            Width="100"
                            Height="30"/>
                </StackPanel>

            </Grid>
        </Grid>
    </Border>
</Window>
